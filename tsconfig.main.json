{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "dist/main",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
  },
  "include": [
    "main.ts",
    "__tests__/**/*.ts",
    "lib/*.ts",
  ],
  "exclude": ["node_modules", "renderer/renderer.ts", "dist"]
}
